<div class="title_row first">
    <h3>
        <?php $this->_('CWatch.tab_sites.sites'); ?>
        <a href="<?php echo $this->base_uri . 'services/manage/' . $this->Html->ifSet($service->id) . '/tabClientSites?action=add_site';?>" class="btn btn-default pull-right"><?php $this->_('CWatch.tab_sites.add');?></a>
    </h3>
</div>
<table class="table table-bordered">
    <tr>
        <td><?php $this->_('CWatch.tab_sites.name'); ?></td>
        <td><?php $this->_('CWatch.tab_sites.licenseKey'); ?></td>
        <td><?php $this->_('CWatch.tab_sites.expiry'); ?></td>
        <td><?php $this->_('CWatch.tab_sites.status'); ?></td>
        <td><?php $this->_('CWatch.tab_sites.actions'); ?></td>
    </tr>
    <?php
    if (!empty($this->Html->ifSet($sites))) {
        foreach ($sites as $key => $site) {
        ?>
        <tr>
            <td><?php $this->Html->_($site->domain); ?></td>
            <td><?php $this->Html->_($site->licenseKey); ?></td>
            <td>
                <?php
                if ($this->Html->ifSet($site->endTime)) {
                    echo date('Y-m-d H:s:m', substr($site->endTime, 0, 10));
                }
                ?>
            </td>
            <td><?php $this->Html->ifSet($site->status) == 'ADD_SITE_COMPLETED' ? $this->_('CWatch.tab_sites.status_complete') : $this->_('CWatch.tab_sites.status_pending'); ?></td>
            <td></td>
        </tr>
        <?php
        }
    } else {
    ?>
        <tr>
            <td colspan="5">
                <?php $this->_('CWatch.tab_sites.no_results');?>
            </td>
        </tr>
    <?php
    }
    ?>
</table>